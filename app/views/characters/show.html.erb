<h2><%= @character.name %></h2>
<ul>
  <li>Birth Year: <%= @character.birth_year %></li>
  <li>Race: <%= link_to @character.race.name, race_path %></li>
  <li>Height: <%= @character.height %></li>
  <li>Mass: <%= @character.mass %></li>
  <li>Gender: <%= @character.gender %></li>
  <li>Planet: <%= link_to @character.planet.name, planet_path %></li>
</ul>
<h3>Films</h3>
<ul>
  <% @character.films.each do |film| %>
    <li><%= link_to film.name, film %></li>
  <% end %>
</ul>

<p><%= link_to 'Back', characters_path%></p>