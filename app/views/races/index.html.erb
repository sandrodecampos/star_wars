<section class="jumbotron text-center">
  <div class="container">
    <h1>Star Wars Races</h1>
    <p></p>
  </div>
</section>
<div class="album py-5 bg-light">
  <div class="container">
   <%= paginate @races %>
    <div class="row">
      <% @races.each do |race| %>
      <div class="col-md-2 mb-4">
        <div class="card h-100 mb-4 shadow-sm">
          <%= link_to (image_tag "R#{race.id}.jpg", :class => "card-img-top"), race %>
          <div class="card-body">
            <p class="card-text text-center"><%= race.name %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>